264 /* ERC677 additions to ERC20 */
265 contract Standard677Token is ERC677, StandardToken {
266 
267   function transferAndCall(address _to, uint _value, bytes _data) public returns (bool) {
268     require(super.transfer(_to, _value)); // do a normal token transfer
269     emit TransferAndCall(msg.sender, _to, _value, _data);
270     //filtering if the target is a contract with bytecode inside it
271     if (isContract(_to)) return contractFallback(msg.sender, _to, _value, _data);
272     return true;
273   }
274 
275   //function that is called when transaction target is a contract
276   function contractFallback(address _sender, address _to, uint _value, bytes _data) private returns (bool) {
277     ERC223Receiver receiver = ERC223Receiver(_to);
278     require(receiver.tokenFallback(_sender, _value, _data));
279     return true;
280   }
281 
282   //assemble the given address bytecode. If bytecode exists then the _addr is a contract.
283   function isContract(address _addr) private constant returns (bool is_contract) {
284     // retrieve the size of the code on target address, this needs assembly
285     uint length;
286     assembly { length := extcodesize(_addr) }
287     return length > 0;
288   }
289 }
