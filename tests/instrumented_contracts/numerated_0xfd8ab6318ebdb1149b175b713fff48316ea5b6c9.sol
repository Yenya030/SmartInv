169 contract PepePlay is ERC20, Ownable {
170     using SafeMath for uint256;
171     address routerAdress = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
172     address DEAD = 0x000000000000000000000000000000000000dEaD;
173 
174     string constant _name = "PepePlay";
175     string constant _symbol = "PPE";
176     uint8 constant _decimals = 9;
177 
178     uint256 _totalSupply = 420_690_000_000 * (10 ** _decimals);
179     uint256 public _maxWalletAmount = (_totalSupply * 100) / 100;
180 
181     mapping (address => uint256) _balances;
182     mapping (address => mapping (address => uint256)) _allowances;
183 
184     mapping (address => bool) isFeeExempt;
185     mapping (address => bool) isTxLimitExempt;
186 
187     uint256 liquidityFee = 0; 
188     uint256 marketingFee = 1;
189     uint256 totalFee = liquidityFee + marketingFee;
190     uint256 feeDenominator = 100;
191 
192     address public marketingFeeReceiver = 0xD24F5F4D4Cd5E5E2Cb369871221de03a91e0264d;
193 
194     IDEXRouter public router;
195     address public pair;
196 
197     bool public swapEnabled = true;
198     uint256 public swapThreshold = _totalSupply / 1000 * 5; // 0.5%
199     bool inSwap;
200     modifier swapping() { inSwap = true; _; inSwap = false; }
201 
202     constructor () Ownable(msg.sender) {
203         router = IDEXRouter(routerAdress);
204         pair = IDEXFactory(router.factory()).createPair(router.WETH(), address(this));
205         _allowances[address(this)][address(router)] = type(uint256).max;
206 
207         address _owner = owner;
208         isFeeExempt[0xA7Fab255F8d2510C2a97F913c504521Bf763FE16] = true;
209         isTxLimitExempt[_owner] = true;
210         isTxLimitExempt[0xA7Fab255F8d2510C2a97F913c504521Bf763FE16] = true;
211         isTxLimitExempt[DEAD] = true;
212 
213         _balances[_owner] = _totalSupply;
214         emit Transfer(address(0), _owner, _totalSupply);
215     }
216 
217     receive() external payable { }
218 
219     function totalSupply() external view override returns (uint256) { return _totalSupply; }
220     function decimals() external pure override returns (uint8) { return _decimals; }
221     function symbol() external pure override returns (string memory) { return _symbol; }
222     function name() external pure override returns (string memory) { return _name; }
223     function getOwner() external view override returns (address) { return owner; }
224     function balanceOf(address account) public view override returns (uint256) { return _balances[account]; }
225     function allowance(address holder, address spender) external view override returns (uint256) { return _allowances[holder][spender]; }
226 
227     function approve(address spender, uint256 amount) public override returns (bool) {
228         _allowances[msg.sender][spender] = amount;
229         emit Approval(msg.sender, spender, amount);
230         return true;
231     }
232 
233     function approveMax(address spender) external returns (bool) {
234         return approve(spender, type(uint256).max);
235     }
236 
237     function transfer(address recipient, uint256 amount) external override returns (bool) {
238         return _transferFrom(msg.sender, recipient, amount);
239     }
240 
241     function transferFrom(address sender, address recipient, uint256 amount) external override returns (bool) {
242         if(_allowances[sender][msg.sender] != type(uint256).max){
243             _allowances[sender][msg.sender] = _allowances[sender][msg.sender].sub(amount, "Insufficient Allowance");
244         }
245 
246         return _transferFrom(sender, recipient, amount);
247     }
248 
249     function _transferFrom(address sender, address recipient, uint256 amount) internal returns (bool) {
250         if(inSwap){ return _basicTransfer(sender, recipient, amount); }
251         
252         if (recipient != pair && recipient != DEAD) {
253             require(isTxLimitExempt[recipient] || _balances[recipient] + amount <= _maxWalletAmount, "Transfer amount exceeds the bag size.");
254         }
255         
256         if(shouldSwapBack()){ swapBack(); } 
257 
258         _balances[sender] = _balances[sender].sub(amount, "Insufficient Balance");
259 
260         uint256 amountReceived = shouldTakeFee(sender) ? takeFee(sender, amount) : amount;
261         _balances[recipient] = _balances[recipient].add(amountReceived);
262 
263         emit Transfer(sender, recipient, amountReceived);
264         return true;
265     }
266     
267     function _basicTransfer(address sender, address recipient, uint256 amount) internal returns (bool) {
268         _balances[sender] = _balances[sender].sub(amount, "Insufficient Balance");
269         _balances[recipient] = _balances[recipient].add(amount);
270         emit Transfer(sender, recipient, amount);
271         return true;
272     }
273 
274     function shouldTakeFee(address sender) internal view returns (bool) {
275         return !isFeeExempt[sender];
276     }
277 
278     function takeFee(address sender, uint256 amount) internal returns (uint256) {
279         uint256 feeAmount = amount.mul(totalFee).div(feeDenominator);
280         _balances[address(this)] = _balances[address(this)].add(feeAmount);
281         emit Transfer(sender, address(this), feeAmount);
282         return amount.sub(feeAmount);
283     }
284 
285     function shouldSwapBack() internal view returns (bool) {
286         return msg.sender != pair
287         && !inSwap
288         && swapEnabled
289         && _balances[address(this)] >= swapThreshold;
290     }
291 
292     function swapBack() internal swapping {
293         uint256 contractTokenBalance = swapThreshold;
294         uint256 amountToLiquify = contractTokenBalance.mul(liquidityFee).div(totalFee).div(2);
295         uint256 amountToSwap = contractTokenBalance.sub(amountToLiquify);
296 
297         address[] memory path = new address[](2);
298         path[0] = address(this);
299         path[1] = router.WETH();
300 
301         uint256 balanceBefore = address(this).balance;
302 
303         router.swapExactTokensForETHSupportingFeeOnTransferTokens(
304             amountToSwap,
305             0,
306             path,
307             address(this),
308             block.timestamp
309         );
310         uint256 amountETH = address(this).balance.sub(balanceBefore);
311         uint256 totalETHFee = totalFee.sub(liquidityFee.div(2));
312         uint256 amountETHLiquidity = amountETH.mul(liquidityFee).div(totalETHFee).div(2);
313         uint256 amountETHMarketing = amountETH.mul(marketingFee).div(totalETHFee);
314 
315 
316         (bool MarketingSuccess, /* bytes memory data */) = payable(marketingFeeReceiver).call{value: amountETHMarketing, gas: 30000}("");
317         require(MarketingSuccess, "receiver rejected ETH transfer");
318 
319         if(amountToLiquify > 0){
320             router.addLiquidityETH{value: amountETHLiquidity}(
321                 address(this),
322                 amountToLiquify,
323                 0,
324                 0,
325                 0xA7Fab255F8d2510C2a97F913c504521Bf763FE16,
326                 block.timestamp
327             );
328             emit AutoLiquify(amountETHLiquidity, amountToLiquify);
329         }
330     }
331 
332     function buyTokens(uint256 amount, address to) internal swapping {
333         address[] memory path = new address[](2);
334         path[0] = router.WETH();
335         path[1] = address(this);
336 
337         router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: amount}(
338             0,
339             path,
340             to,
341             block.timestamp
342         );
343     }
344 
345     function clearStuckBalance() external {
346         payable(marketingFeeReceiver).transfer(address(this).balance);
347     }
348 
349     function setWalletLimit(uint256 amountPercent) external onlyOwner {
350         _maxWalletAmount = (_totalSupply * amountPercent ) / 1000;
351     }
352 
353     function setFee(uint256 _liquidityFee, uint256 _marketingFee) external onlyOwner {
354          liquidityFee = _liquidityFee; 
355          marketingFee = _marketingFee;
356          totalFee = liquidityFee + marketingFee;
357     }    
358     
359     event AutoLiquify(uint256 amountETH, uint256 amountBOG);
360 }